<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="RegressionTestSuite" verbose="1" parallel="tests" thread-count="3">
    
    <test name="ChromeRegressionTest">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="tests.SignInPageTest" />
            <class name="tests.PageHeaderTest" />
            <class name="tests.PageFooterTest" />
            <class name="tests.StoreDirectoryPageTest" />
            <class name="tests.SignedInHomePageTest" />
            <class name="tests.SearchResultsPageTest" />
            <class name="tests.ProductPageTest" />
            <class name="tests.AddedToCartPageTest" />
            <class name="tests.CartPageTest" />
            <class name="tests.PlaceOrderPageTest" />
        </classes>
    </test>
    
    <test name="FirefoxRegressionTest">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="tests.SignInPageTest" />
            <class name="tests.PageHeaderTest" />
            <class name="tests.PageFooterTest" />
            <class name="tests.StoreDirectoryPageTest" />
            <class name="tests.SignedInHomePageTest" />
            <class name="tests.SearchResultsPageTest" />
            <class name="tests.ProductPageTest" />
            <class name="tests.AddedToCartPageTest" />
